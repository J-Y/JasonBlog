<% content_for :sitemap do %>
  <a href="<%= topics_path %>">社区论坛</a> &gt; <span class="current">最近活跃的帖子</span>
<% end %>
<div class="leftbox">
	<div class="box">
		<h1>最近活跃的帖子</h1>
		<table class="topics">
		<% @topics.each do |topic| %>
	  <tr class="topic">
	    <td class="avatar">
				<%= image_tag(topic.user.avatar(:normal)) %>
			</td>
	    <td>
				<p class="title"><a href="<%= topic_path(topic) %>" title="<%= topic.title %>"><%= truncate(topic.title, :length => 100) %></p>
				<p class="leader">
					由 <a href="<%= user_path(topic.user_id) %>"><%= topic.user.name %></a> 在 <%= topic.node.name %> 中发起
				</p>
				<p class="time">
					<% if topic.last_reply_user.blank? %>
						发布于<%= time_ago_in_words(topic.created_at) %>
					<% else %>
						最后由 <a href="<%= user_path(topic.last_reply_user_id) %>"><%= topic.last_reply_user.name %></a> 回复于 <%= time_ago_in_words(topic.replied_at) %>
					<% end %>
				</p>
			</td>
	  </tr>
		<% end %>
		</table>
	</div>
</div>
<%= render 'sidebar' %>
